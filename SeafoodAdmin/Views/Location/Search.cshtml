@using SeafoodEntity;
@model List<Location>
@{
    Layout = null;
    var count = 1;
}
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Danh sách địa điểm</div>
                <div class="actions">
                    @*<a href="#" class="btn yellow"><i class="icon-pencil"></i> Edit</a>
                    <a href="#" class="btn green"><i class="icon-plus"></i> Add</a>*@
                </div>
            </div>
            <div class="portlet-body">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên địa điểm</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var locationItem in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@(locationItem.LocationName)</td>
                                <td>@(locationItem.Address)</td>
                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        
    </div>
</div>