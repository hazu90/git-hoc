@using SeafoodEntity;
@model List<Location>
@{
    Layout = null;
    var count = 1;
}
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Danh sách địa điểm</div>
                <div class="actions">
                    @*<a href="#" class="btn yellow"><i class="icon-pencil"></i> Edit</a>
                    <a href="#" class="btn green"><i class="icon-plus"></i> Add</a>*@
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-condensed table-hover" id="table-unappove-location" >
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên địa điểm</th>
                            <th>Địa chỉ</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var locationItem in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@(locationItem.LocationName)</td>
                                <td>@(locationItem.Address)</td>
                                <td>
                                    @if(locationItem.IsApproved)
                                    {
                                        <span class="label label-success">Đã duyệt</span>
                                    }
                                    else
                                    {
                                        <span class="label label-default">Chưa duyệt</span>
                                    }
                                </td>
                                <td>
                                    @if(!locationItem.IsApproved)
                                    {
                                        <div class="btn-group">
                                          <a class="btn mini blue" href="#" data-toggle="dropdown">
                                              <i class="icon-cog"></i> Quản lý
                                              <i class="icon-angle-down"></i>
                                          </a>
                                          <ul class="dropdown-menu">
                                             <li><a href="javascript:void(0);" name="approve" data-location-id="@(locationItem.LocationId)"><i class="icon-ok"></i> Duyệt</a></li>
                                          </ul>
                                       </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>