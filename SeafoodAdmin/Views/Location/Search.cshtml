@using SeafoodEntity;
@model List<Location>
@{
    Layout = null;
    var count = 1;
}
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Danh sách các địa điểm chưa được duyệt</div>
                <div class="pagination pagination-small">
                    
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên địa điểm</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var locationItem in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@locationItem.LocationName</td>
                                <td>@locationItem.Address</td>
                                <td>
                                    <a href="#" class="btn mini blue"><i class="icon-edit"></i> Duyệt</a>
                                </td>
                            </tr> 
                            
                        }
                    </tbody>
                </table>    
            </div>
        </div>
    </div>
</div>